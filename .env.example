# AI News Analysis & Automated Trading System
# Environment Variables Template

# ============================================
# Phase 0: Data Analysis
# ============================================

# Kaggle API (for dataset download)
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Claude API (for AI analysis)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Gemini API (optional alternative)
GOOGLE_API_KEY=AIzaSyXXXXX

# ============================================
# Phase 1-3: Production System
# ============================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Finnhub API (News source)
FINNHUB_API_KEY=your_finnhub_api_key

# Alpha Vantage API (Stock prices)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Brokerage API (for actual trading)
# Replace with your actual brokerage credentials
BROKERAGE_API_KEY=your_brokerage_api_key
BROKERAGE_API_SECRET=your_brokerage_api_secret
BROKERAGE_ACCOUNT_ID=your_account_id

# SNS/Notification (Slack/LINE)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
LINE_NOTIFY_TOKEN=your_line_notify_token

# ============================================
# System Configuration
# ============================================

# Environment (dev/prod)
ENVIRONMENT=dev

# Debug Mode
DEBUG=true

# Circuit Breaker Limits
MAX_DAILY_LOSS_USD=20
MAX_DAILY_TRADES=5
TOTAL_BUDGET_USD=200
